
.row
  .col-lg-12
    %h1.page-header
      Examenes disponibles

    %table.table.table-striped.table-hover
      %thead
        %tr
          %th Nombre
          %th Descripcion
          - if @completed
            %th Nota
          - else
            %th Inicia
            %th Termina
            -if @status != 'NULL'
              %th

      %tbody
        - @tests.each do |test|
          %tr
            %td= test.name
            %td= test.description
            -if @status == 'complete'
            -else
              %td= test.begins_at
              %td= test.ends_at
            - if user_signed_in?
              - if @status == 'incomplete'
                %td= link_to 'Continuar', test,class:"btn btn-default"
              - elsif @status == 'complete'
                %td= test.score
            - else
              %td
                %i Inicie Sesion para hacer
